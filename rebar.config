%%
%% rebar3 configuration file
%%
{minimum_otp_vsn, "18"}.

{erl_opts, [
    debug_info,
    fail_on_warning,
    {parse_transform, lager_transform}
]}.

{deps, [
    {lager, {git, "https://github.com/erlang-lager/lager", {tag, "3.5.2"}}}
]}.

{profiles, [
    {test, [{deps, [
        {ulid, {git, "https://github.com/savonarola/ulid", {tag, "v0.1.0"}}}
    ]}]}
]}.

{relx, [
    {include_erts, false},
    {include_src, false},

    {release, {replicaz, "2.0.0"}, [
        replicaz
    ]},

    {sys_config, "config/sys.config"},
    {vm_args, "config/vm.args"}
]}.
